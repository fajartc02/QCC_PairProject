        <%- include('../partials/nav.ejs', {data: 'null'}) %>
            <form action="/members/<%= user.id %>/update" method="POST" style="margin: 100px">
                <ul>
                    <% if(err) { %>
                        <%   err.errors.forEach(err => { %>
                            <li>
                                <%= err.message %>
